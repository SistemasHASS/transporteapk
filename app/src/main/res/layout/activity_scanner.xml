<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Vista de la cÃ¡mara -->
    <androidx.camera.view.PreviewView
        android:id="@+id/previewView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Overlay superior (semi-transparente para legibilidad) -->
    <LinearLayout
        android:id="@+id/overlayTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp"
        android:layout_gravity="top"
        android:background="#80000000"> <!-- negro semi-transparente -->

        <TextView
            android:id="@+id/tvContador"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contador: 0"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:shadowColor="#AA000000"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="2"/>

        <TextView
            android:id="@+id/tvUltimoCodigo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ãšltimo QR: ---"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="6dp"
            android:textColor="@android:color/white"
            android:shadowColor="#AA000000"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="2"/>

    </LinearLayout>

    <!-- BotÃ³n cerrar (arriba derecha) -->
    <Button
        android:id="@+id/btnCerrar"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:text="âœ–"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:layout_gravity="top|end"
        android:layout_margin="12dp"
        android:backgroundTint="@android:color/holo_red_dark"/>

    <!-- Marco guÃ­a del scanner (centro) con esquinas verdes -->
    <FrameLayout
        android:id="@+id/scanner_frame"
        android:layout_width="260dp"
        android:layout_height="160dp"
        android:layout_gravity="center">

        <!-- esquinas (lÃ­neas) -->
        <View
            android:layout_width="40dp"
            android:layout_height="4dp"
            android:layout_gravity="top|start"
            android:background="@android:color/white"/>
        <View
            android:layout_width="4dp"
            android:layout_height="40dp"
            android:layout_gravity="top|start"
            android:background="@android:color/white"/>

        <View
            android:layout_width="40dp"
            android:layout_height="4dp"
            android:layout_gravity="top|end"
            android:background="@android:color/white"/>
        <View
            android:layout_width="4dp"
            android:layout_height="40dp"
            android:layout_gravity="top|end"
            android:background="@android:color/white"/>

        <View
            android:layout_width="40dp"
            android:layout_height="4dp"
            android:layout_gravity="bottom|start"
            android:background="@android:color/white"/>
        <View
            android:layout_width="4dp"
            android:layout_height="40dp"
            android:layout_gravity="bottom|start"
            android:background="@android:color/white"/>

        <View
            android:layout_width="40dp"
            android:layout_height="4dp"
            android:layout_gravity="bottom|end"
            android:background="@android:color/white"/>
        <View
            android:layout_width="4dp"
            android:layout_height="40dp"
            android:layout_gravity="bottom|end"
            android:background="@android:color/white"/>

    </FrameLayout>

    <!-- BotÃ³n linterna (abajo derecha) -->
    <Button
        android:id="@+id/btnLinterna"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:text="ðŸ”¦"
        android:textSize="20sp"
        android:textColor="@android:color/white"
        android:layout_gravity="bottom|end"
        android:layout_margin="18dp"
        android:backgroundTint="@android:color/holo_blue_light"/>

</FrameLayout>
